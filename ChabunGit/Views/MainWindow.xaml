<Window x:Class="ChabunGit.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ChabunGit.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel, IsDesignTimeCreatable=False}"
        Title="ChabunGit" Height="800" Width="1200" MinHeight="700" MinWidth="1000">

    <!-- ▼▼▼ 1. 스타일 리소스를 창 내부에 정의 ▼▼▼ -->
    <Window.Resources>
        <!-- 기본 액션 버튼을 위한 스타일 -->
        <Style x:Key="MainActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- 강조된 Push 버튼을 위한 스타일 (MainActionButtonStyle 상속) -->
        <Style x:Key="PrimaryActionButtonStyle" TargetType="Button" BasedOn="{StaticResource MainActionButtonStyle}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <DockPanel Margin="10" IsEnabled="{Binding IsBusy, Converter={StaticResource BooleanInverterConverter}}">
            <!-- 상단 컨트롤 영역 -->
            <StackPanel DockPanel.Dock="Top" Orientation="Vertical">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="폴더 선택" Command="{Binding SelectFolderCommand}" Padding="10,5"/>
                    <TextBox Grid.Column="1" Text="{Binding SelectedFolder, Mode=OneWay}" IsReadOnly="True" VerticalContentAlignment="Center" Margin="10,0"/>
                    <TextBlock Grid.Column="2" Text="{Binding CurrentBranch}" FontWeight="Bold" VerticalAlignment="Center"/>
                </Grid>

                <!-- ▼▼▼ 2. 버튼에 스타일 적용 및 텍스트 수정 ▼▼▼ -->
                <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                    <Button Content="⬇️ 원격 확인 (Fetch)" Command="{Binding FetchCommand}" Style="{StaticResource MainActionButtonStyle}"/>
                    <Button Content="⏬ 원격 가져오기 (Pull)" Command="{Binding PullCommand}" Style="{StaticResource MainActionButtonStyle}"/>
                    <Button Content="⏫ GitHub에 공유 (Push)" Command="{Binding PushCommand}" Style="{StaticResource PrimaryActionButtonStyle}"/>
                    <CheckBox IsChecked="{Binding IsForcePushChecked}" Content="강제 푸시" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- 하단 로그 및 상태 영역 -->
            <StatusBar DockPanel.Dock="Bottom" Margin="0,10,0,0">
                <StatusBarItem>
                    <TextBlock Text="{Binding FetchStatus}"/>
                </StatusBarItem>
            </StatusBar>
            <GroupBox DockPanel.Dock="Bottom" Header="명령어 로그" Height="150" Margin="0,5,0,0">
                <DockPanel>
                    <Button DockPanel.Dock="Bottom" Content="로그 복사" Command="{Binding CopyLogCommand}" Margin="0,5,0,0"/>
                    <TextBox x:Name="LogTextBox" 
                             Text="{Binding LogText, Mode=OneWay}" 
                             IsReadOnly="True" 
                             TextWrapping="Wrap" 
                             VerticalScrollBarVisibility="Auto" 
                             TextChanged="LogTextBox_TextChanged"/>
                </DockPanel>
            </GroupBox>

            <!-- 메인 작업 영역 -->
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>

                <DockPanel Grid.Column="0">
                    <GroupBox DockPanel.Dock="Bottom" Header=".gitignore 관리" Padding="5">
                        <StackPanel>
                            <Button Content=".gitignore 열기/수정" Command="{Binding EditGitignoreCommand}"/>
                            <Button Content="✨ .gitignore 질문" Command="{Binding GenerateGitignorePromptCommand}" Margin="0,5,0,0"/>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="변경 파일 목록">
                        <ListBox ItemsSource="{Binding ChangedFiles}"/>
                    </GroupBox>
                </DockPanel>

                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="LightGray"/>

                <DockPanel Grid.Column="2">
                    <GroupBox Header="커밋 메시지 작성" DockPanel.Dock="Top" MinHeight="220" MaxHeight="300">
                        <DockPanel>
                            <TextBlock Text="{Binding TitleCharCountText}" DockPanel.Dock="Top" Margin="2"/>
                            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                                <Button Content="✨ 커밋 메시지 질문" Command="{Binding GenerateCommitPromptCommand}"/>
                                <Button Content="커밋" Command="{Binding CommitCommand}" FontWeight="Bold" Margin="5,0,0,0"/>
                            </StackPanel>
                            <TextBox Text="{Binding CommitTitle, UpdateSourceTrigger=PropertyChanged}" DockPanel.Dock="Top" Margin="0,5,0,0" MaxLength="50"/>
                            <TextBox Text="{Binding CommitBody, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,5,0,0"/>
                        </DockPanel>
                    </GroupBox>
                    <GroupBox Header="커밋 이력" Margin="0,5,0,0">
                        <DockPanel>
                            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="0,5,0,0">
                                <Button Content="방금 커밋 취소" Command="{Binding UndoLastCommitCommand}"/>
                                <Button Content="이 시점으로 돌아가기" Command="{Binding ResetToCommitCommand}" Margin="5,0,0,0"/>
                            </StackPanel>
                            <TextBox DockPanel.Dock="Bottom" 
                                     Text="{Binding SelectedCommit.Hash, FallbackValue='커밋을 선택하면 전체 해시가 표시됩니다.'}"
                                     IsReadOnly="True" 
                                     Margin="0,5,0,5"
                                     FontFamily="Consolas"/>
                            <ListBox ItemsSource="{Binding CommitHistory}" 
                                     SelectedItem="{Binding SelectedCommit}" 
                                     DisplayMemberPath="DisplayMember"/>
                        </DockPanel>
                    </GroupBox>
                </DockPanel>
            </Grid>
        </DockPanel>

        <!-- 새 프로젝트 가이드 (Overlay) -->
        <Border Background="#E0FFFFFF" Visibility="{Binding IsNewProjectGuideActive, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="600">
                <TextBlock Text="새 프로젝트 설정 가이드" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="선택한 폴더는 Git 저장소가 아닙니다. 아래 단계에 따라 저장소를 설정하세요." TextWrapping="Wrap" Margin="0,10,0,20"/>

                <GroupBox Header="1. 로컬 저장소 생성" Padding="10">
                    <Button Content="이 폴더를 Git 저장소로 만들기 (git init)" Command="{Binding InitializeGitCommand}" IsEnabled="{Binding GuideCanInit}"/>
                </GroupBox>

                <GroupBox Header="2. 원격 저장소 연결 (선택사항)" Padding="10" Margin="0,10,0,0" IsEnabled="{Binding GuideCanAddRemote}">
                    <StackPanel>
                        <TextBlock Text="GitHub에서 새로 만든 빈 저장소의 HTTPS 주소를 입력하세요."/>
                        <TextBox Margin="0,5,0,0" Text="{Binding NewProjectGitHubUrl, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button Content="원격 저장소 연결" Command="{Binding AddRemoteCommand}" Margin="0,5,0,0"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="3. 완료" Padding="10" Margin="0,10,0,0">
                    <Button Content="설정 완료하고 시작하기" Command="{Binding CompleteGuideCommand}" IsEnabled="{Binding GuideCanComplete}"/>
                </GroupBox>
            </StackPanel>
        </Border>

        <!-- Busy Indicator (Overlay) -->
        <Border Background="#80000000" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
            <TextBlock Text="처리 중..." Foreground="White" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>