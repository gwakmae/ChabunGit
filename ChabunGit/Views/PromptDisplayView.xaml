<!-- File: ChabunGit/Views/PromptDisplayView.xaml -->
<Window x:Class="ChabunGit.Views.PromptDisplayView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ChabunGit.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:PromptDisplayViewModel}"
        Title="{Binding Title}" Height="500" Width="700" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="✨ AI 프롬프트 생성" 
                    Command="{Binding GenerateAiPromptCommand}" 
                    Visibility="{Binding IsGenerateButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    ToolTip="현재 내용을 바탕으로 AI에게 질문할 커밋 메시지 프롬프트를 생성합니다."/>
            <Button Content="{Binding CopyButtonText}" 
                    Command="{Binding CopyToClipboardCommand}" 
                    Margin="5,0,0,0"/>
        </StackPanel>
        <TextBox Text="{Binding PromptText}" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas"/>
    </DockPanel>
</Window>
